<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="4dp">

    <TextView
        android:id="@+id/textHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12 PM"
        android:textColor="@color/md_theme_texto"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageClima"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginVertical="6dp"
        android:src="@drawable/clima_desconocido"
        android:contentDescription="@string/searchbar_scrolling_view_behavior" />

    <TextView
        android:id="@+id/textTemperatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="24Â°C"
        android:textColor="@color/md_theme_texto"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textDescripcion"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textAlignment="center"
        android:gravity="center"
        android:textColor="@color/md_theme_texto"
        android:text="Clima Desconocido"
        android:textSize="12sp"/>

</LinearLayout>
