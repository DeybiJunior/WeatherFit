<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparente">

    <!-- SwipeRefreshLayout envuelve todo el contenido -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textHora"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Hora"
                        android:textColor="@color/md_theme_texto"
                        android:textSize="60sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textUbicacion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="@color/md_theme_texto"
                        android:text="UbicaciÃ²n"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/btnReintentarUbicacion"
                        style="@style/EstiloBotonPersonalizado"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Volver a intentar"
                        android:textColor="@color/md_theme_texto"
                        android:visibility="visible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="24dp"
                    android:background="@drawable/bg_navbar_blur"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <!-- ðŸ–¼ï¸ Imagen (50%) -->
                    <ImageView
                        android:id="@+id/imageClima"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:adjustViewBounds="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/clima_desconocido" />

                    <!-- ðŸ“„ Textos (50%) -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textDia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DÃ­a"
                            android:textColor="@color/md_theme_texto"
                            android:textStyle="bold"
                            android:textSize="24dp" />

                        <TextView
                            android:id="@+id/textTemperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Temp."
                            android:textColor="@color/md_theme_texto"
                            android:textSize="46dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textClima"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Estado"
                            android:textColor="@color/md_theme_texto"
                            android:gravity="center"
                            android:textSize="16dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginHorizontal="24dp"
                    android:background="@drawable/bg_navbar_blur"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PronÃ³stico por Hora"
                        android:textSize="16dp"
                        android:gravity="start"
                        android:padding="8dp"
                        android:textColor="@color/md_theme_texto"
                        android:textStyle="bold"
                        android:drawableStart="@drawable/icono_tiempo"
                        android:drawablePadding="8dp" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerPronostico"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="8dp" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</androidx.constraintlayout.widget.ConstraintLayout>